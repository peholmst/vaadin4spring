        <module>addons/i18n</module>
        <module>addons/mvp</module>
        <module>addons/portlet</module>
        <module>addons/sidebar</module>
        <module>addons/simple-mvp</module>
        <module>extensions/boot</module>
        <module>extensions/core</module>
        <module>extensions/security</module>
        <module>extensions/test</module>
        <module>samples</module>
    </modules>
</project>
